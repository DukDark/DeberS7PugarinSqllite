<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeberS7PugarinSqllite.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Vantana Login" FontSize="Medium" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña"/>
            <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="Registrarse" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
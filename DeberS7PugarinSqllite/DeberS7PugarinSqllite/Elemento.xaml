<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeberS7PugarinSqllite.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Nombre" Placeholder="Nombre"/>
            <Entry x:Name="Usuario" Placeholder="Usuario"/>
            <Entry x:Name="Contrasenia" Placeholder="Contrasenia"/>
            <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" BackgroundColor="LawnGreen"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" BackgroundColor="LawnGreen"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>